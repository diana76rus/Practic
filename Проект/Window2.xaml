        <TextBox x:Name ="razdel_textBlock" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="147,160,0,0" TextWrapping="Wrap" Text="Раздел -" VerticalAlignment="Top" Width="144"/>

    </Grid>
</Window>
